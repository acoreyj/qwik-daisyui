{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/docs/src",
  "targets": {
    "build": {
      "executor": "qwik-nx:build",
      "options": {
        "runSequence": ["docs:build.client", "docs:build.ssr"],
        "outputPath": "dist/apps/docs"
      },
      "configurations": {
        "preview": {},
        "production": {},
        "deno": {}
      }
    },
    "build.client": {
      "executor": "@nx/vite:build",
      "options": {
        "outputPath": "dist/apps/docs",
        "configFile": "apps/docs/vite.config.ts"
      }
    },
    "build.ssr": {
      "executor": "@nx/vite:build",
      "defaultConfiguration": "preview",
      "options": {
        "outputPath": "dist/apps/docs"
      },
      "configurations": {
        "preview": {
          "ssr": "src/entry.preview.tsx",
          "mode": "production"
        },
        "deno": {
          "configFile": "apps/docs/adapters/deno/vite.config.ts"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "docs:build",
        "port": 4173
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/docs"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "docs:build.client",
        "mode": "ssr",
        "port": 5173
      }
    },
    "serve.debug": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --inspect-brk ../../node_modules/vite/bin/vite.js --mode ssr --force",
        "cwd": "apps/docs"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/docs/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "build-deno": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx nx run docs:build:deno"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/apps/docs/client",
        "command": "deployctl deploy --project=<YOUR-DENO-PROJECT-NAME> https://deno.land/std/http/file_server.ts --dry-run"
      },
      "configurations": {
        "preview": {
          "command": "deployctl deploy --project=<YOUR-DENO-PROJECT-NAME> https://deno.land/std/http/file_server.ts"
        },
        "production": {
          "command": "deployctl deploy --project=<YOUR-DENO-PROJECT-NAME> --prod https://deno.land/std/http/file_server.ts"
        }
      },
      "dependsOn": ["build-deno"]
    },
    "preview-deno": {
      "executor": "nx:run-commands",
      "options": {
        "command": "deno run --allow-net --allow-read --allow-env dist/apps/docs/server/entry.deno.js"
      },
      "dependsOn": ["build-deno"]
    }
  },
  "tags": []
}
